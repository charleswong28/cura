FROM node:20-alpine

RUN npm install -g pnpm@9

WORKDIR /app

# Copy workspace manifests so pnpm can resolve the workspace
COPY package.json pnpm-workspace.yaml pnpm-lock.yaml ./
COPY tsconfig.base.json ./
COPY apps/web-home-page/package.json ./apps/web-home-page/package.json

# Install Linux-native node_modules inside the container
RUN pnpm install --frozen-lockfile

# Copy build config (not source â€” source is bind-mounted for hot reload)
COPY apps/web-home-page/tsconfig.json apps/web-home-page/next.config.ts apps/web-home-page/postcss.config.mjs ./apps/web-home-page/

# Fallback source copy (overridden by volume mount in dev)
COPY apps/web-home-page/src ./apps/web-home-page/src

WORKDIR /app/apps/web-home-page

EXPOSE 3002

CMD ["pnpm", "run", "dev"]

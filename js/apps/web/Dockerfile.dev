FROM node:20-alpine

RUN npm install -g pnpm@9

WORKDIR /app

# Copy workspace manifests so pnpm can resolve the workspace
COPY package.json pnpm-workspace.yaml pnpm-lock.yaml ./
COPY tsconfig.base.json ./
COPY apps/web/package.json ./apps/web/package.json

# Install Linux-native node_modules inside the container
RUN pnpm install --frozen-lockfile

# Copy build config (not source â€” source is bind-mounted for hot reload)
COPY apps/web/tsconfig.json apps/web/next.config.ts apps/web/postcss.config.mjs ./apps/web/

# Fallback source copy (overridden by volume mount in dev)
COPY apps/web/src ./apps/web/src

WORKDIR /app/apps/web

EXPOSE 3000

CMD ["pnpm", "run", "dev"]
